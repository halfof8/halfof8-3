{
	"root": true,
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"extends": [
		"next",
		"next/core-web-vitals",
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"plugins": [
		"prettier",
		"import"
	],
	"settings": {
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 120
			}
		],
		"no-unused-vars": "warn",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "warn",
		"prefer-const": "warn",
		"class-methods-use-this": "off",
		"max-len": [
			"error",
			{
				"code": 120,
				"tabWidth": 3
			}
		]
	}
}
