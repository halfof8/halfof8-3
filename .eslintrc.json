{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120
      }
    ],
    "no-unused-vars": "warn",
    "func-names": "off",
    "object-shorthand": "warn",
    "prefer-const": "warn",
    "class-methods-use-this": "off",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ]
  }
}
